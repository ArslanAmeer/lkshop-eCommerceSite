@model FYProject1Classes.FinalOrderMgmt.FinalOrder

@{
    ViewBag.Title = "ConfirmOrder";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>ConfirmOrder</h2>

<div>
    <h4>FinalOrder</h4>
    <hr />
    <div class="col-lg-9">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.FullAddress)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FullAddress)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Phone)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Phone)
            </dd>

            <dt>
                Items:
            </dt>
            @foreach (var i in Model.ShoppingCartItem)
            {
                <dd>
                    Name: @i.Name | Price: @i.Price | Sale:@i.Sale | Quantity: @i.Quantity | Amount: @i.Amount
                </dd>
            }
            TOTAL: @ViewBag.total
        </dl>
    </div>
</div>
