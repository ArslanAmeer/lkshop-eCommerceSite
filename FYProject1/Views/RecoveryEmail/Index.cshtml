@model FYProject1.Models.recoveryEmail

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <h2>Password Recovery</h2>
    <br />
    @using (Html.BeginForm("Index", "RecoveryEmail", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <label>Enter Registered Email Address!</label>
        <div>
            @Html.TextBoxFor(e => e.Email, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(e => e.Email, null, new { @class = "text-danger" })
            <br />
            @if (ViewBag.error != null)
            {
            <a class="btn btn-danger" href="@Url.Action("Index", "RecoveryEmail")"><span class="glyphicon glyphicon-refresh"></span> RETRY</a>
            <hr />
            <div class="alert alert-danger">@ViewBag.error</div> 
            }
            else if (ViewBag.success != null)
            {
            <a class="btn btn-success" href="@Url.Action("Login", "User")"><span class="glyphicon glyphicon-check"></span> Login</a>
            <hr />
            <div class="alert alert-success">@ViewBag.success</div>
            }
            else
            {
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-send"></i> Send</button>
            }
        </div>

    }
</div>
